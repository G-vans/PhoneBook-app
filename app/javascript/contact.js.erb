
$(document).on('turbolinks:load', function() {
  // Send AJAX request on input change
  $('#contact-search-input').on('input', function() {
    $.ajax({
      url: $('#contact-search-form').attr('action'),
      method: 'GET',
      data: $('#contact-search-form').serialize(),
      dataType: 'script',
      success: function(response) {
        $('#contact-list').html(response);
      }
    });
  });
});

// Get the elements
var listViewTable = document.querySelector('.list-view');
var cardViewContainer = document.querySelector('.card-view');

// List View
function listView() {
  listViewTable.style.display = 'table';
  cardViewContainer.style.display = 'none';
}

// Grid View
function gridView() {
  listViewTable.style.display = 'none';
  cardViewContainer.style.display = 'block';
}

// Toggle active class
var current = document.getElementsByClassName("active");
current[0].classList.remove("active");
this.classList.add("active");
