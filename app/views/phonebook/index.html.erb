<h1>Contacts</h1>

<div class="btn-group mb-3">
  <%= link_to 'List View', root_path(view: 'list'), class: 'btn btn-sm btn-primary' %>
  <%= link_to 'Grid View', root_path(view: 'grid'), class: 'btn btn-sm btn-primary' %>
</div>

<% if @contacts.present? %>
  <% if params[:view] == 'list' %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= contact.first_name %> <%= contact.last_name %></td>
            <td><%= contact.email %></td>
            <td><%= contact.phone %></td>
            <td>
              <%= link_to 'Show', contact, class: 'btn btn-sm btn-primary' %>
              <%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-sm btn-secondary' %>
              <%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% elsif params[:view] == 'grid' %>
    <div class="row">
      <% @contacts.each do |contact| %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= contact.first_name %> <%= contact.last_name %></h5>
              <p class="card-text"><strong>Email:</strong> <%= contact.email %></p>
              <p class="card-text"><strong>Phone:</strong> <%= contact.phone %></p>
              <div class="btn-group">
                <%= link_to 'Show', contact, class: 'btn btn-sm btn-primary' %>
                <%= link_to 'Edit', edit_contact_path(contact), class: 'btn btn-sm btn-secondary' %>
                <%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% else %>
  <p>No contacts found.</p>
<% end %>
