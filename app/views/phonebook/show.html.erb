<h1>Contact Details</h1>

<p><strong>First Name:</strong> <%= @contact.first_name %></p>
<p><strong>Last Name:</strong> <%= @contact.last_name %></p>
<p><strong>Email:</strong> <%= @contact.email %></p>
<p><strong>Phone Number:</strong> <%= @contact.phone_number %></p>

<%= link_to 'Edit', edit_phonebook_path(@contact), class: 'btn btn-secondary' %>
<%= link_to 'Delete', phonebook_path(@contact), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
<%= link_to 'Back to Phonebook', phonebook_path, class: 'btn btn-primary' %>
